<Window x:Class="NotepadWpfApp.WindowFind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadWpfApp"
        mc:Ignorable="d"
        Title="AboutMe" Height="250" Width="210" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Background="Transparent">
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0.1, 0" EndPoint="0.6, 1">
                <GradientStop Color="#030E4F" Offset="1"/>
                <GradientStop Color="#6dd47e" Offset="0"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Barariu Claudiu" FontSize="25" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="10LF201" FontSize="25" HorizontalAlignment="Center"></TextBlock>
            <TextBlock FontSize="20" HorizontalAlignment="Center">
                <Hyperlink Name="HyperlinkHelp" NavigateUri="https://elearning.unitbv.ro/my/" RequestNavigate="Hyperlink_RequestNavigate">About</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Border>
</Window>
